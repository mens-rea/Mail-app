<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to "Destroy Comment", [comment.profile, comment], data: {
        turbo_method: :delete,
        turbo_confirm: "Are yoou sure?"
    } %>
  </p>
<% end %>